                  </ComboBox>
                  <ComboBox fx:id="combo_select_product" layoutX="10.0" layoutY="10.0" onAction="#chooseProductfromCombobox" prefWidth="150.0" promptText="Select Product">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <TextField fx:id="sell_txt_Unit" promptText="Enter Unit">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="sell_txt_charges" layoutX="342.0" layoutY="20.0" promptText="Enter Charges">
