<AnchorPane id="AnchorPane" prefHeight="50.0" prefWidth="783.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="billing_app_fxml.Adding_Sell_ItemController">
    <HBox layoutY="25.0" prefHeight="46.0" prefWidth="782.0" style="-fx-background-color: #184541;" AnchorPane.topAnchor="25.0">
               <children>
                  <ComboBox fx:id="combo_select_metal" onAction="#chooseMetalfromCombobox" prefWidth="150.0" promptText="Select Metal">
